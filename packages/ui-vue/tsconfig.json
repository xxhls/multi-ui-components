{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "strictNullChecks": false,
    "baseUrl": "./",
    "paths": {
      "types/*": ["./_types/*"],
      "utils/*": ["./_utils/*"],
    }
  },
  "include": ["components/**/*.ts", "components/**/*.tsx", "components/**/*.vue"],
  "exclude": ["node_modules"]
}
